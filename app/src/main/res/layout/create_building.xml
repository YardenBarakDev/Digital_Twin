<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create building"
        android:textSize="25sp"
        android:layout_marginBottom="25dp"
        android:textStyle="italic|bold"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/building_ET_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15sp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/building_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Building name"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="35"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/building_ET_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15sp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/building_LBL_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Building address"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="35"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/building_ET_floors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15sp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/building_LBL_floors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of floors"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/building_ET_apartments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15sp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/building_LBL_apartments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of apartments"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/building_BTN_createBuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Building"
        />








</LinearLayout>